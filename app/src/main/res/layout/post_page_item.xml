<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/post_page_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="3">

        <include
            android:id="@+id/first_post"
            layout="@layout/post_item" />
        <include
            android:id="@+id/second_post"
            layout="@layout/post_item" />
        <include
            android:id="@+id/third_post"
            layout="@layout/post_item" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="3">

        <include
            android:id="@+id/fourth_post"
            layout="@layout/post_item" />
        <include
            android:id="@+id/fifth_post"
            layout="@layout/post_item" />
        <include
            android:id="@+id/sixth_post"
            layout="@layout/post_item" />

    </LinearLayout>

</LinearLayout>